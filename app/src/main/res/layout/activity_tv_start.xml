<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#D3D3D3"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Tv On The Air"
                android:background="#D3D3D3"
                android:id="@+id/TvOnTheAir"
                android:gravity="center"
                android:textSize="40sp"
                android:textColor="#ff0000"
                android:fontFamily="cursive"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="100dp"
                android:background="#D3D3D3"
                android:textColor="#800080"
                android:onClick="ViewTVAll"
                android:text="View All"
                android:layout_height="match_parent" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/Tvmainrecyclerview1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Popular"
                android:gravity="center"
                android:textSize="40sp"
                android:background="#D3D3D3"
                android:textColor="#32C"
                android:fontFamily="cursive"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="100dp"
                android:background="#D3D3D3"
                android:textColor="#800080"
                android:text="View All"
                android:onClick="ViewTVAll2"
                android:layout_height="match_parent" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/Tvmainrecyclerview2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Top Rated"
                android:fontFamily="cursive"
                android:background="#D3D3D3"
                android:gravity="center"
                android:textSize="40sp"
                android:textColor="#722f37"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="100dp"
                android:textColor="#800080"
                android:background="#D3D3D3"
                android:onClick="ViewTVAll3"
                android:text="View All"
                android:layout_height="match_parent" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/Tvmainrecyclerview3"/>
    </LinearLayout>
</ScrollView>