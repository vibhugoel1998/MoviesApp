<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vibhu.moviesapp.TvDetails"
    tools:showIn="@layout/activity_tv_details">

    <ScrollView
        android:layout_width="match_parent"
        android:background="#D3D3D3"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"
                android:background="#ff0000"
                android:text="ADD TO FAV"
                android:id="@+id/button"
                android:onClick="AddToFavourites"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/ratings"
                android:gravity="center"
                android:textSize="30sp"
                android:fontFamily="casual"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/description"
                android:gravity="center"
                android:fontFamily="casual"
                android:layout_marginTop="20dp"
                android:textColor="#800080"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/releasedate"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:fontFamily="casual"
                android:textColor="#32CD32"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:textSize="40sp"
                android:textColor="#ff0000"
                android:text="Production Companies"
                android:paddingLeft="20dp"
                android:fontFamily="cursive"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/ProductionRecyclerView"
                android:layout_height="200dp">

            </android.support.v7.widget.RecyclerView>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:textSize="40sp"
                android:textColor="#ff0000"
                android:text="CAST"
                android:paddingLeft="20dp"
                android:fontFamily="cursive"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/castRecyclerView"
                android:layout_height="200dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:textSize="40sp"
                android:textColor="#ff0000"
                android:text="Similar Shows"
                android:paddingLeft="20dp"
                android:fontFamily="cursive"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/SimilarRecyclerView"
                android:layout_height="200dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:textSize="40sp"
                android:textColor="#ff0000"
                android:text="Trailers and other videos"
                android:paddingLeft="20dp"
                android:fontFamily="cursive"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/TrailerRecyclerView1"
                android:layout_height="200dp"/>
        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.NestedScrollView>